<UserControl x:Class="UMCSearch.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UMCSearch" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.DataContext>
            <local:SearchViewModel/>
        </Grid.DataContext>
        <TextBlock Text="测试语句，UserControl加载成功" Foreground="SkyBlue"></TextBlock>
        <Button Width="150" Height="50" Command="{Binding Click}"></Button>
    </Grid>
</UserControl>
